<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    android:elevation="90dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black_overlay">
       <!-- <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"/>-->
        <TextView
            android:id="@+id/carNameshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Name"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#ffff"/>

        <TextView
            android:id="@+id/cartypeshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Type"
            android:textColor="#ffff"/>
        <TextView
            android:id="@+id/colorshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color"
            android:textColor="#ffff"/>
        <TextView
            android:id="@+id/engineCapacityshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Engine Capacity"
            android:textColor="#ffff"/>
        <TextView
            android:id="@+id/modelshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Desc"
            android:textColor="#ffff"/>
        <TextView
            android:id="@+id/seatCapacityshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seat Capacity"
            android:textColor="#ffff"/>
        <TextView
            android:id="@+id/priceshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="#ffff"/>
    </LinearLayout>


</android.support.v7.widget.CardView>